<div class="index-container">
    <div class="welcome-card">
        <h1>¡Bienvenido!</h1>
        <p>{{user.firstName}}, gracias por elegirnos.</p>
    </div>

    {{#if isAdmin}}
        <h2 class="catalog-title">Productos del catálogo</h2>
        <div class="products-list">
            {{#each products}}
                <div class="product-card">
                    <p class="product-title">{{this.title}}</p>
                    <p class="product-price">${{this.price}}</p>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="no-access">
            <p>No tenés acceso como administrador</p>
        </div>
    {{/if}}
</div>

<style>
    .index-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 80vh;
        background: #f5f6fa;
        padding: 2rem 0;
    }

    .welcome-card {
        background: #fff;
        padding: 1.5rem 2rem;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
        text-align: center;
        min-width: 320px;
    }

    .catalog-title {
        color: #2d3436;
        margin-bottom: 1rem;
        text-align: center;
    }

    .products-list {
        display: flex;
        flex-wrap: wrap;
        gap: 1.2rem;
        justify-content: center;
        width: 100%;
        max-width: 900px;
    }

    .product-card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 1px 6px rgba(0, 0, 0, 0.07);
        padding: 1rem 1.5rem;
        min-width: 180px;
        text-align: center;
        transition: box-shadow 0.2s;
    }

    .product-card:hover {
        box-shadow: 0 4px 16px rgba(9, 132, 227, 0.12);
    }

    .product-title {
        font-weight: 600;
        color: #0984e3;
        margin-bottom: 0.5rem;
    }

    .product-price {
        color: #636e72;
        font-size: 1.1rem;
    }

    .no-access {
        background: #ffe6e6;
        color: #d63031;
        padding: 1rem 2rem;
        border-radius: 8px;
        margin-top: 2rem;
        text-align: center;
    }
</style>
